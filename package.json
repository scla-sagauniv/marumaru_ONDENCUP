{
  "name": "marumaru-ondencup",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "tsc && vite build",
    "check:lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "check:typecheck": "tsc --noEmit",
    "check:markuplint": "markuplint \"./src/**/*.{jsx,tsx}\"",
    "check:format": "prettier \"./src/**/*.ts\" \"./src/**/*.tsx\" --check",
    "format": "prettier \"./src/**/*.{ts,tsx}\" --write",
    "preview": "vite preview",
    "commit": "cz",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "check:lint --dir src --fix",
      "check:markuplint",
      "check:typecheck",
      "format"
    ]
  },
  "dependencies": {
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "hygen": "^6.2.11",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@markuplint/jsx-parser": "^3.11.0",
    "@markuplint/react-spec": "^3.12.0",
    "@stylistic/eslint-plugin": "^0.1.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "markuplint": "^3.14.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "volta": {
    "node": "21.0.0",
    "pnpm": "8.9.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
