{
  "name": "marumaru_ondencup",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "hygen": "hygen marumaru new",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check:lint": "next lint",
    "check:typecheck": "tsc --noEmit",
    "check:markuplint": "markuplint \"./src/**/*.{jsx,tsx}\"",
    "check:format": "prettier \"./src/**/*.ts\" \"./src/**/*.tsx\" --check",
    "format": "prettier \"./src/**/*.{ts,tsx}\" --write",
    "preview": "vite preview",
    "commit": "cz",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "check:lint --dir src --fix",
      "check:markuplint",
      "check:typecheck",
      "format"
    ]
  },
  "dependencies": {
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "hygen": "^6.2.11",
    "prettier": "^3.0.3",
    "react": "^18",
    "react-dom": "^18",
    "next": "13.5.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "postcss": "^8",
    "tailwindcss": "^3",
    "eslint": "^8",
    "eslint-config-next": "13.5.6",
    "@markuplint/jsx-parser": "^3.11.0",
    "@markuplint/react-spec": "^3.12.0",
    "@stylistic/eslint-plugin": "^0.1.1",
    "eslint-plugin-react-refresh": "^0.4.3",
    "markuplint": "^3.14.0"
  },
  "volta": {
    "node": "21.0.0",
    "pnpm": "8.9.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
